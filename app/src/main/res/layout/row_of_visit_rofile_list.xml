<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp">

        <TextView
            android:id="@+id/nameInVisitProfileListRow"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:drawableLeft="@drawable/ic_person"
            android:text="Debasish Mula"
            android:textSize="21dp" />
        <TextView
            android:id="@+id/homeInVisitProfileListRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_home"
            android:layout_marginLeft="62dp"
            android:text="Contai"
            android:textSize="17dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp">

        <TextView
            android:id="@+id/emailInVisitProfileListRow"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:drawableLeft="@drawable/ic_email"
            android:text="debasishmula0@gmail.com"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/phoneInVisitProfileListRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone"
            android:layout_marginLeft="16dp"
            android:text="8370969887"
            android:textSize="16dp"/>

    </LinearLayout>

</LinearLayout>