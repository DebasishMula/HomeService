<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/First_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF11112D"
            android:orientation="vertical">
            >
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#FFACACB0"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_person" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/servicemanHomeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Debasish Mula"
                        android:textColor="#ffffff"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/ServicemanHomePhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8370969887"
                        android:textColor="#ffffff"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/ServicemanHomeEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="debasishmula0@gmail.com"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/add_img"
                    android:layout_width="72dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="#FF11112D"
                    android:text="Add photo"
                    android:textColor="#FF0099CC"
                    android:textSize="10sp" />
                <LinearLayout
                    android:id="@+id/servicemanHomeLL1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical"
                    >
                    <Button
                        android:id="@+id/ServicemanHomeUpdateAccountInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="update profile"
                        android:layout_marginLeft="20dp"
                        android:background="#FF11112D"
                        android:textColor="#FF0099CC"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="#FF11112D"
                            android:text="Profile Completed"
                            android:textSize="18dp"
                            android:textColor="#FF2B25F9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#FF11112D"
                            android:text="  50%"
                            android:textSize="18dp"
                            android:textColor="#FFE9050D" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               >

                <Button
                    android:id="@+id/ServicemanHomeVisitsOnProfileButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18sp"
                    android:background="#FF11112D"
                    android:text="Visits on profile"
                    android:textAllCaps="false"
                    android:textColor="#FF0099CC"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ServicemanHomeVisitsOnProfileTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9sp"
                    android:text="00"
                    android:textColor="#FFD3054B"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/ServicemanHomeMessageRequestButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22sp"
                    android:background="#FF11112D"
                    android:text="Message requests"
                    android:textAllCaps="false"
                    android:textColor="#FF0099CC"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ServicemanHomeMessageRequestTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9sp"
                    android:text="00"
                    android:textColor="#ffffff"
                    android:textSize="25sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="240dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#ffffff"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pull_down to refresh"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/gradient"
                >
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ServicemanHomeServiceAlertsButton"
                    android:layout_width="169dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="#ffffff"
                    android:text="Service Alerts"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ServicemanHomeServiceAlertsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="20sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/gradient"
                >
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ServicemanHomeSavedServiceButton"
                    android:layout_width="169dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="#ffffff"
                    android:text="Saved Services"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ServicemanHomSavedServiceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="20sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/gradient"
                >
            </LinearLayout>

            <Button
                android:id="@+id/ServicemanHomeSavedTeamButton"
                android:layout_width="365dp"
                android:layout_height="73dp"
                android:layout_marginLeft="15dp"

                android:background="#ffffff"
                android:text="Saved Team(group with co-worker)"
                android:textAllCaps="false"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:background="@drawable/gradient"
                >
            </LinearLayout>

            <Button
                android:id="@+id/ServicemanHomeMakeA_GroupButton"
                android:layout_width="wrap_content"
                android:layout_height="62dp"
                android:layout_marginLeft="15dp"
                android:background="#ffffff"
                android:text="Make a group with co-worker to work as a team"
                android:textAllCaps="false"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:background="@drawable/gradient"
                >
            </LinearLayout>

        </LinearLayout>



    </FrameLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        app:menu="@menu/drawer_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        >

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>