<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF1E2A47"
    tools:context=".HiringAServiceman">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff"
            android:text="Working Date"
            android:textSize="16dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/hireWorkingDate"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:textSize="22dp" />

            <Button
                android:id="@+id/hirePickDateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="#FF1E2A47"
                android:text="Pick Up Date"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textColor="@android:color/holo_blue_dark" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:text="Working Address"
            android:textSize="16dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/hireWorkingAdress"
                android:layout_width="match_parent"
                android:layout_height="42dp"
              android:background="@drawable/edittext_shape"

                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:text="Working Description"
            android:textSize="16dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/hireWorkingDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/edittext_shape"

                />
        </LinearLayout>
        <Button
            android:id="@+id/hireButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="@drawable/button_shape1"
            android:textColor="#FF1E2A47"
            android:text="Hire"
            android:textSize="20dp"/>
    </LinearLayout>



</RelativeLayout>
