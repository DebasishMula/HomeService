<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_ch_password"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFACACB0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Your Password Should be a minimum of 8 character with at least one number and one special character "
            android:textSize="15dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/ch_oldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:hint="Old Password" />

        <EditText
            android:id="@+id/ch_newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:hint="New Password" />

        <EditText
            android:id="@+id/ch_confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:hint="Confirm Password" />

        <Button
            android:id="@+id/ch_changePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#FF24F63D"
            android:text="change password"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </LinearLayout>



</RelativeLayout>
