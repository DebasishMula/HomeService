<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_frame2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/first_part"
            android:background="#FF11112D"
            >
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_in_user"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#FFACACB0">

            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/user_imageView"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_person"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userHomeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Debasish Mula"
                        android:textColor="#ffffff"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/userHomePhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8370969887"
                        android:textColor="#ffffff"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/UserHomeEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="debasishmula0@gmail.com"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <Button
                   android:id="@+id/add_img_user"
                   android:layout_width="72dp"
                   android:layout_height="20dp"
                   android:layout_marginBottom="40dp"
                   android:layout_marginLeft="20dp"
                   android:background="#FF11112D"
                   android:text="Add Photo"
                   android:textColor="#FF0099CC"
                   android:textSize="10sp" />
           </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_marginTop="240dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pull_down to refresh"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/gradient"
                >
            </LinearLayout>

            <Button
                android:id="@+id/SavedTechnicianAndWorker"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginLeft="15dp"
                android:background="#ffffff"
                android:text="Saved Technician And Worker"
                android:textAllCaps="false"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:background="@drawable/gradient"
                >
            </LinearLayout>

            <Button
                android:id="@+id/MessagesWithTechnicianAndWorker"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginLeft="15dp"
                android:background="#ffffff"
                android:text="Messages With Technician or Worker"
                android:textAllCaps="false"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:background="@drawable/gradient"
                >
            </LinearLayout>

            <Button
                android:id="@+id/SearchTechnician"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginLeft="15dp"
                android:background="#ffffff"
                android:drawableRight="@drawable/ic_search"
                android:text="Search Technician"
                android:textAllCaps="false"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:background="@drawable/gradient"
                >
            </LinearLayout>

        </LinearLayout>


    </FrameLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        app:menu="@menu/drawer_view2"
        >

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>