<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FF0F0D45"
    tools:context=".Register_User">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:text="Creat account faster using "
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <Button
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:background="@drawable/gradient"
                android:drawableLeft="@drawable/google"
                android:drawablePadding="15dp"
                android:gravity="center_vertical"
                android:text="GOOGLE"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <Button
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"

                android:background="@drawable/gradient"
                android:drawableLeft="@drawable/facebook"
                android:drawablePadding="15dp"
                android:gravity="center_vertical"
                android:text="FACEBOOK"
                android:textColor="#ffffff"
                android:textSize="14dp" />
            />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="All your acivity remain private"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/register_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_person"
                android:hint="Full Name"
                android:textColor="#ffffff"
                android:textColorHint="@android:color/darker_gray" />

            <EditText
                android:id="@+id/register_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_email"
                android:hint="Email Address"
                android:textColor="#ffffff"
                android:textColorHint="@android:color/darker_gray" />

            <EditText
                android:id="@+id/register_user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_phone"

                android:hint="Mobile Number"
                android:inputType="phone"
                android:textColor="#ffffff"
                android:textColorHint="@android:color/darker_gray" />

            <EditText

                android:id="@+id/register_user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_key"
                android:hint="Create Password"
                android:inputType="textPassword"
                android:textColor="#ffffff"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Minimum 8 Characters"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button_register_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient"
                android:text="REGISTER"
                android:textColor="#ffffff" />

        </LinearLayout>

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Do you want to register as a ServiceMan?"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button_register_as_a_serviceman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/gradient"
            android:text="REGISTER AS A SERVICEMAN"
            android:textColor="#ffffff" />


    </LinearLayout>


</RelativeLayout>
